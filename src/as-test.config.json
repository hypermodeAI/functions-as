{
  "input": ["./assembly/__tests__/*.spec.ts"],
  "outDir": "./build",
  "config": "./asconfig.json",
  "suites": [],
  "coverage": {
    "enabled": true,
    "show": false
  },
  "buildOptions": {
    "args": [
      "--config", "./node_modules/@hypermode/functions-as/plugin.asconfig.json",
      "--exportRuntime"
    ],
    "wasi": false,
    "parallel": true,
    "verbose": true
  },
  "runOptions": {
    "runtime": {
      "name": "node",
      "run": "node ./build/index.js"
    }
  }
}
